<?xml version="1.0"?>
<openerp>
<data>
    
    <record model="ir.ui.view" id="view_ept_ent_entidades_form">
        <field name="name">ept_ent.entidades.form</field>
        <field name="model">ept_ent.entidades</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Entidades">
                <sheet>
                    <separator string="Registro Entidades" colspan="4"/>
                    
                    <field name="id" invisible="1"/>
                    <field 
                        name="image1"
                        widget='image' 
                        class="oe_left oe_avatar" 
                        options='{"preview_image": "image1", "size": [90, 90]}'
                        />
                    <div class="oe_title oe_left">
                       
                    <h2>
                        <label for="editar"
                        groups="base.group_system,ept_usuarios.group_ger_inf" 
                        attrs="{'invisible': [('id', '=', False)]}"
                        />
                        <field name="editar" 
                        groups="base.group_system,ept_usuarios.group_ger_inf"
                        attrs="{'invisible': [('id', '=', False)]}"
                        />
                        <field  name="name" 
                                string="Entidad" 
                                placeholder="Entidad"  
                                required ="1"
                                help="Nombre de la Entidad que se registra"
                                attrs="{'readonly':[('editar','=',False)]}"
                                />
                    </h2>
                        <field  name="rif" 
                                placeholder="R.I.F."
                                required="1"
                                help="Numero del R.I.F. de la Entidad"
                                data-inputmask="'mask': 'G-99999999-9'"
                                attrs="{'readonly':[('editar','=',False)]}"
                                />
                        <field  name="tipo_entidad_id" 
                                options='{"no_create": True}'
                                placeholder="Tipo de Entidad"
                                attrs="{'readonly':[('editar','=',False)]}"
                                />
                        <field  name="codigo_onapre" 
                                placeholder="Código de Onapre"
                                attrs="{'readonly':[('editar','=',False)]}"
                                />
                        <field  name="email" 
                                placeholder="Correo Electronico"
                                help="Correo Electronico de la Entidad"
                                />
                        <field  name="website" 
                                placeholder="Por ejemplo: www.cfg.gob.ve"
                                help="Pagina web de la Entidad"
                                />
                        <field  name="phone" 
                                placeholder="Teléfono"
                                help="Numero de Teléfono de la Entidad"
                                data-inputmask="'mask': '9999-9999999'"
                                />
                        <field  name="fax" 
                                placeholder="Fax"
                                help="Numero de Fax de la Entidad"
                                data-inputmask="'mask': '9999-9999999'"
                                />
                        <label 
                            for="cargar_proyectos" 
                            string="Cargar Proyectos"
                             groups="base.group_system,ept_usuarios.group_ger_inf,ept_usuarios.group_jun_dir" />
                        <field  
                         groups="base.group_system,ept_usuarios.group_ger_inf,ept_usuarios.group_jun_dir" 
                        name="cargar_proyectos" />
                        <label 
                            for="monto_disp_mantenimiento" 
                             string="Monto Disponible Mantenimiento"
                             groups="base.group_system,ept_usuarios.group_ger_inf,ept_usuarios.group_jun_dir" />
                        <field  
                            groups="base.group_system,ept_usuarios.group_ger_inf,ept_usuarios.group_jun_dir" 
                            name="monto_disp_mantenimiento" />
                    </div>
                     <div class="oe_right oe_button_box">
                    <button name="action_get_attachment_tree_view" 
                        class="oe_stat_button"
                        icon="fa-book"
                        type="object">
                        <field name="attachment_number" widget="statinfo" string="Cartas"/>
                    </button>
                    </div>
<!--
                    boton de lista de comunicaciones 
                    
-->
                     <div 
                     class="oe_right oe_button_box">
                    <button name="action_get_comunicaciones_tree_view" 
                        class="oe_stat_button"
                        icon="fa-book"
                        type="object">
                        <field name="comunicaciones_number" widget="statinfo" string="Comunicaciones"/>
                    </button>
                    </div> 
<!--
                    <field name="user_ids"/> 
-->
                    <notebook colspan="4">
                        <page string="Usuario(s) del Sistema" >
                            <field name="user_ids" attrs="{'readonly':[('editar','=',False)]}" >
                            <tree>
                                <field  name="name" />
                                <field  name="login" />
                                <field  name="login_date" />
                            </tree>
                            </field>
                        </page>
                            <page string="Dirección" >
                                <group col="2" colspan="2">
                                    <field  name="redi_id"
                                            on_change="limpiar_campos('redi')" 
                                            style="width:30%%" 
                                            string="REDI" 
                                            nolabel="0"
                                            context="{'default_user_ids':user_ids[0][2]}"
                                            help="REDI donde esta ubicada la Entidad"
                                            widget="selection"
                                            attrs="{'readonly':[('editar','=',False)]}"
                                            />
                                    <field  name="estado_id" 
                                            on_change="limpiar_campos('estado')"
                                            context="{'default_user_ids':user_ids[0][2]}"
                                            domain="[('redi_id','in',[redi_id])]"
                                            style="width:30%%" 
                                            string="Estado" 
                                            nolabel="0"
                                            help="Estado donde esta ubicada la Entidad"
                                            widget="selection"
                                            attrs="{'readonly':[('editar','=',False)]}"
                                            />
                                    <field  name="municipio_id" 
                                            on_change="limpiar_campos('municipio')"
                                            context="{'default_user_ids':user_ids[0][2]}"
                                            domain="[('estado_id','in',[estado_id])]"  
                                            style="width:30%%" 
                                            string="Municipio" 
                                            nolabel="0"
                                            help="Municipio donde esta ubicada la Entidad"
                                            widget="selection"
                                            attrs="{'readonly':[('editar','=',False)]}"
                                            />
                                    <field  name="parroquia_id" 
                                            domain="[('municipio_id','in',[municipio_id])]" 
                                            style="width:30%%" 
                                            string="Parroquia" 
                                            nolabel="0"
                                            help="Parroquia donde esta ubicada la Entidad"
                                            widget="selection"
                                            attrs="{'readonly':[('editar','=',False)]}"
                                            />
                                    <field  name="sector" 
                                            style="width:30%%" 
                                            nolabel="0" 
                                            string="Sector"
                                            help="Sector donde esta ubicada la Entidad"
                                            attrs="{'readonly':[('editar','=',False)]}"
                                            />
                                </group>
                            <group colspan="1" col="2">
                                <button name="open_map" 
                                        help="Para la busqueda en el mapa escriba palabras claves; por ejemplo: Calle, Residencia, Edificio."
                                        string="Mapa" 
                                        type="object" 
                                        icon="gtk-zoom-in"
                                        />
                            </group>
                            </page>
                            <page string="Radio de Acción" >
                                <sheet style="width:100%" col="4">
                                    <field  name="redi_ids" 
                                            on_change="limpiar_campos_ra('redi')"
                                            widget="many2many_tags" 
                                            options="{'no_create':True}"
                                            placeholder="REDI"
                                            help="Radio de Acción de la REDI que pertenece la Entidad"
                                            attrs="{'readonly':[('editar','=',False)]}"/>
                                    <field  name="estado_ids"  
                                            on_change="limpiar_campos_ra('estado')"
                                            widget="many2many_tags"
                                            options="{'no_create':True}"
                                            domain="[('redi_id','in',redi_ids[0][2])]"
                                            help="Radio de Acción del Estado que pertenece la Entidad"
                                            placeholder="Estado"
                                            attrs="{'readonly':[('editar','=',False)]}"/>
                                                
                                    <field  name="municipio_ids"  
                                            on_change="limpiar_campos_ra('municipio')"
                                            options="{'no_create':True}"
                                            domain="[('estado_id','in',estado_ids[0][2])]"
                                            help="Radio de Acción del Municipio que pertenece la Entidad"
                                            attrs="{'readonly':[('editar','=',False)]}">
                                            <tree>
                                                <field name="municipio"/>
                                                <field name="estado_id"/>
                                            </tree>
                                            </field>
                                    <field  name="parroquia_ids" 
                                            options="{'no_create':True}"
                                            domain="[('municipio_id','in',municipio_ids[0][2])]"
                                            help="Radio de Acción de la Parroquia que pertenece la Entidad"
                                            attrs="{'readonly':[('editar','=',False)]}">
                                            <tree>
                                                <field name="parroquia"/>
                                                <field name="municipio_id"/>
                                            </tree>
                                            </field>
                                </sheet>
                            </page>
                            <page string="Alcaldías Asociadas" attrs="{'invisible': [('tipo_entidad_id','not in',(1))]}">
                                <field  name="entidades_ids"
                                        domain="[('estado_id','in',[estado_id]),('tipo_entidad_id','in',[2])]"
                                        help="Aldaldías asocidas a la entidad"
                                        attrs="{'readonly':[('editar','=',False)]}"
                                        options='{"no_create": True,"no_open": True}'
                                        />
                            </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
<!--
                    <field 
                        name="message_follower_ids" 
                        widget="mail_followers" 
                        groups="base.group_user"
                        readonly="1"/>
-->
                    <field name="message_ids" widget="mail_thread" readonly="1" />
                </div>
            </form>
        </field>
    </record>
    
        <record model="ir.ui.view" id="res_ept_ent_entidades_kanban_view">
            <field name="name">ept_ent.entidades.kanban</field>
            <field name="model">ept_ent.entidades</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="color"/>
                    <field name="display_name"/>
                    <field name="title"/>
                    <field name="rif"/>
                    <field name="email"/>
                    <field name="parent_id"/>
                    <field name="is_company"/>
                    <field name="function"/>
                    <field name="phone"/>
                    <field name="state_id"/>
                    <field name="category_id"/>
                    <field name="has_image"/>
                    <field name="image1"/>
                    <field name="user_ids"/>
                    <templates>
                        <t t-name="kanban-box">
                        <div class="panel panel-default">
                            <div class="panel-body">
                            <div class="oe_kanban_vignette oe_semantic_html_override">
                                <a type="open">
                                    <t t-if="record.image1 and record.image1.raw_value !== false">
                                        <img t-att-src="'data:image1/png;base64,'+record.image1.raw_value" class="oe_avatar oe_kanban_avatar_smallbox"/>
                                    </t>
                                    <t t-if="record.has_image.raw_value === false and (!record.image1 or record.image1.raw_value === false)">
                                        <t t-if="record.is_company.raw_value === true">
                                            <img t-att-src='_s + "/ept_entidades/static/img/avatar_cfg.jpg"' class="oe_kanban_image oe_kanban_avatar_smallbox"/>
                                        </t>
                                    </t>
                                </a>
                                <div class="oe_kanban_details">
                                    <h4 class="oe_partner_heading"><a type="open"><field name="display_name"/></a></h4>
                                    <ul>
                                        <li t-if="record.rif.raw_value"><field name="rif"/></li>
                                        <li t-if="record.tipo_entidad_id.raw_value"><field name="tipo_entidad_id"/></li>
                                        <li t-if="record.email.raw_value">Correo: <a t-attf-href="mailto:#{record.email.raw_value}"><field name="email"/></a></li>
                                        <li t-if="record.phone.raw_value">Teléfono: <field name="phone"/></li>
                                        
                                    </ul>
                                </div>
                                <div class="panel panel-default">
                                     <div class="panel-heading" align="center">
                                        <b >Comunicaciones Oficiales</b>
                                     </div>
                                      <div class="panel-body">
                                          
<!--
                                    Inicio del panel de comunicaciones EPT=>CFI=>EPT
-->
                                    <div class="panel panel-default">
                                      <div class="panel-body">
                                          <h4 class="panel-title">
                                              <a name="action_get_comunicaciones_tree_view"  type="object">
                                                <div class="badge" title="Cantidad de comunicaciones enviadas por la EPT">
                                                    <field name="comunicaciones_number"/>
                                                    <img src="web/static/src/img/icons/terp-mail-.png" alt="Comunicación" />
                                                </div>
                                            </a> EPT
                                            <img src="web/static/src/img/icons/terp-mail-forward.png" alt="-->" title="EPT Envía"/>
                                            <span class="text-danger">FCI</span>
                                            <img src="web/static/src/img/icons/terp-mail-forward.png" alt="-->" title="FCI Responde"/>
                                            EPT
                                              </h4>
                                        <div  
                                            groups="base.group_system,ept_usuarios.group_ger_inf,ept_usuarios.group_jun_dir_ana,ept_usuarios.group_jun_dir_sec,ept_usuarios.group_jun_dir,ept_usuarios.group_ger_tpg,ept_usuarios.group_ger_csg,ept_usuarios.group_ger_ppeg,ept_usuarios.group_ger_fcto,ept_usuarios.group_coor_ures,ept_usuarios.group_ggu_ures">
                                            Sin respuesta
                                            <a name="action_get_comunicacionesSinRespuesta_tree_view"  type="object">
                                                <div class="badge">
                                                    <field name="comunicaciones_sinrespuesta_number"/>
                                                </div>
                                            </a><br/><br/>
                                        </div>
                                        <div class="pull-right" title="Comunicaciones leidas por la EPT">
                                            Leídas
                                            <a name="action_get_comunicacionesLeido_tree_view"  type="object">
                                                <div class="badge">
                                                    <field name="comunicaciones_leidas_number"/>
                                                </div>
                                            </a>
                                        </div>
                                        <div class="pull-right" title="Respuestas de las Comunicaciones enviadas por el FCI a la EPT">
                                           Resp. Enviadas
                                            <a name="action_get_comunicacionesEnviadas_tree_view"  type="object">
                                                <div class="badge">
                                                    <field name="comunicaciones_enviada_number"/>
                                                </div>
                                            </a>
                                            <img src="web/static/src/img/icons/terp-gtk-go-back-rtl.png" alt="-->"/>
                                        </div>
                                         <div class="pull-right" title="Comunicaciones procesadas por el FCI">
                                            Procesados
                                            <a name="action_get_comunicacionesProcesado_tree_view"  type="object">
                                                <div class="badge">
                                                    <field name="comunicaciones_procesadas_number"/>
                                                </div>
                                            </a>
                                            <img src="web/static/src/img/icons/terp-gtk-go-back-rtl.png" alt="-->"/>
                                        </div>
                                        <div class="pull-right" title="Comunicaciones en proceso enviadas por la EPT">    
                                            En Proceso
                                            <a name="action_get_comunicacionesProceso_tree_view"  type="object">
                                                <div class="badge">
                                                    <field name="comunicaciones_proceso_number"/>
                                                </div>
                                            </a>
                                            <img src="web/static/src/img/icons/terp-gtk-go-back-rtl.png" alt="-->"/>
                                        </div>
                                      </div>
                                    </div>
<!--
                                    Fin del panel de comunicaciones EPT=>CFI=>EPT
-->

                                   
                                    <div class="panel panel-default">
                                      <div class="panel-body">
                                          <h4 class="panel-title">
                                              <a name="action_get_comunicacionesMasivas_tree_view"  type="object">
                                                <div class="badge" title="Cantidad de comunicaciones enviadas por el FCI">
                                                    <field name="comunicaciones_cfg_number"/>
                                                     <img src="web/static/src/img/icons/terp-mail-.png" alt="Comunicación" />
                                                </div>
                                            </a> <span class="text-danger">FCI</span>
                                            <img src="web/static/src/img/icons/terp-mail-forward.png" alt="-->" title="FCI Envía"/>
                                            EPT
                                              </h4>
                                        <div class="pull-left" title="Comunicaciones enviadas por el FCI">
                                            Enviadas
                                            <a name="action_get_comunicacionesMasivasEnviadas_tree_view"  type="object">
                                                <div class="badge">
                                                    <field name="comunicaciones_fcg_enviada_number"/>
                                                </div>
                                            </a><img src="web/static/src/img/icons/terp-gtk-go-back-rtl.png" alt="-->"/>
                                        </div>
                                         <div class="pull-left" title="Comunicaciones leidas por la EPT">
                                            Leídas
                                            <a name="action_get_comunicacionesMasivasLeidas_tree_view"  type="object">
                                                <div class="badge">
                                                    <field name="comunicaciones_fcg_leidas_number"/>
                                                </div>
                                            </a>
                                        </div>
                                      </div>
                                    </div>
                                </div>
                                </div>
                                 <div class="panel panel-default"  groups="ept_usuarios.group_ent_pt,ept_usuarios.group_ent_pts,ept_usuarios.group_ent_ptio" >
                                    <div class="panel-heading">
                                        Rendiciones
                                    </div>
                                    <div class="panel-body" >
                                        <div class="oe_picking_type_gauge">
                                            <field name="porc_proyectos_x_rendir" context="{'default_user_ids':user_ids[0][2]}" widget="gauge" style="width:150px; height: 110px;" options="{'levelcolors': ['#a9d70b', '#f9c802', '#ff0000']}">Proyectos Por Rendir (%%)</field>
                                            <field name="porc_proyectos_actualizados" context="{'default_user_ids':user_ids[0][2]}" widget="gauge" style="width:150px; height: 110px;">Proyectos Actualizados (%%)</field>
                                            <div class="oe_gauge_labels">
                                                <div class="oe_gauge_label_column col-md-4">
                                                        <center><field name="proyectos_x_rendir"/>  Por rendir</center>
                                                
                                                </div>
                                                <div class="oe_gauge_label_column col-md-4">
                                                       <center> <field name="proyectos_actualizados"/> Actualizados</center>
                                                    
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                </div>
                            </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
    <record model="ir.ui.view" id="view_ept_ent_entidades_tree">
        <field name="name">ept_ent.entidades.tree</field>
        <field name="model">ept_ent.entidades</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Entidades">
                <field name="name"/>
                <field name="rif"/>
                <field name="tipo_entidad_id"/>
                <field name="estado_id"/>
                <field name="monto_disp_mantenimiento"
                        groups="base.group_system,ept_usuarios.group_ger_inf,ept_usuarios.group_jun_dir"/>
            </tree>
        </field>
    </record>
    
    <record model="ir.actions.act_window" id="action_ept_ent_entidades">
        <field name="name">Registro Entidades</field>
        <field name="res_model">ept_ent.entidades</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="res_ept_ent_entidades_kanban_view"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            Aqui se registran los Datos de las Entidades tanto Alcaldias como Gobernaciones
            </p>
        </field>
    </record>
    
    <record model="ir.actions.act_window" id="action_ept_ent_entidades2">
        <field name="name">Registro Entidades</field>
        <field name="res_model">ept_ent.entidades</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('user_ids','in',uid)]</field>
        <field name="view_id" ref="res_ept_ent_entidades_kanban_view"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            Aqui se registran los Datos de las Entidades tanto Alcaldias como Gobernaciones
            </p>
        </field>
    </record>
    
        <menuitem name="Entidades" 
            id="menu_ept_ent_entidades" 
            parent="ept_usuarios.menu_general_ept_pi" 
            sequence="0"
            />
            <menuitem name="Registro de Entidades" 
                id="regsitro_ept_ent_entidades" 
                action="action_ept_ent_entidades" 
                groups="base.group_system,ept_usuarios.group_ger_inf,ept_usuarios.group_jun_dir,ept_usuarios.group_ger_tpg,ept_usuarios.group_ger_tpc,ept_usuarios.group_ger_tpa,ept_usuarios.group_jun_dir_sec"
                parent="menu_ept_ent_entidades" 
                sequence="3"
                />
            <menuitem name="Registro de Entidades " 
                id="regsitro_ept_ent_entidades23"
                groups="ept_usuarios.group_ent_pt,ept_usuarios.group_ent_pts,ept_usuarios.group_ent_ptio" 
                action="action_ept_ent_entidades2" 
                parent="menu_ept_ent_entidades" 
                sequence="5"
                />
        
</data>
</openerp>
