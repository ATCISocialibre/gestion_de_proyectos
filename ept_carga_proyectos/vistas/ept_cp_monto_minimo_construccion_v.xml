<?xml version="1.0" encoding="utf-8"?>
<openerp>
     <data>
         
<!--
         vista formulario para la carga de los montos minimos de obra civil 
-->
         
        <record model="ir.ui.view" id="view_ept_cp_monto_minimo_construccion_form">
            <field name="name">ept_cp_montos_minimos_construccion_form</field>
            <field name="model">ept_cp.montos_minimos_construccion</field> 
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Montos Minimos Obra Civil">
                    <sheet>
                        <group col="2" colspan="2">
                            <field name="tipo_sector_id" on_change="cp_limpiar_campos('categoria_id')" domain="[('parent_id','=',[0])]" style="width: 40%%"/>
                            <field name="categoria_id" on_change="cp_limpiar_campos('subcategoria_id')" string="Categoria" context="{'default_id':tipo_sector_id}"  domain="[('parent_id','=',tipo_sector_id)]" style="width: 40%%"/>
                            <field name="subcategoria_id" on_change="cp_limpiar_campos('obra_civil')" context="{'default_id':categoria_id}" domain="[('parent_id','=',categoria_id)]" style="width: 40%%"/>
                            <field name="unidades_id" style="width: 40%%"/>
                            <field name="monto_construc" style="width: 40%%"/>
                            <field name="monto_rehabilit" style="width: 40%%"/>
                            <field name="monto_ampliac" style="width: 40%%"/>
                        </group>
                     </sheet>
                </form>
            </field>
         </record>
         
<!--
         vista lista para los registros de montos minimos de obra civil 
-->
         
        <record model="ir.ui.view" id="view_ept_cp_montos_minimos_construccion_tree">
            <field name="name">ept_cp_montos_minimos_construccion_tree</field>
            <field name="model">ept_cp.montos_minimos_construccion</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Montos Minimos Obra Civil">
                    <field name="subcategoria_id"/>
                    <field name="monto_construc"/>
                    <field name="monto_rehabilit"/>
                    <field name="monto_ampliac"/>
                    <field name="unidades_id"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="ept_cp_montos_minimos_construccion_action">
            <field name="name">Montos Minimos Obra Civil</field>
            <field name="res_model">ept_cp.montos_minimos_construccion</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Aqui se registran los montos minimos para las obras civiles
                </p>
            </field>
        </record>
        
        <menuitem name="Monto Minimo Obra Civil" 
                id="inicio_ept_cp_montos_minimos_construccion"  
                action="ept_cp_montos_minimos_construccion_action" 
                parent="menu_ept_cp_tipo_sectores"
                sequence="20"/>
                
                
<!--
         vista formulario para la carga de las unidades para obra civil 
-->
                
        <record model="ir.ui.view" id="view_ept_cp_unidades_obra_civil_form">
            <field name="name">ept_cp_unidades_obra_civil_form</field>
            <field name="model">ept_cp.unidades_obra_civil</field> 
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Unidades Obra Civil">
                    <sheet>
                        <group col="2" colspan="2">
                            <field name="unidad" style="width: 40%%"/>
                        </group>
                     </sheet>
                </form>
            </field>
         </record>
         
<!--
         vista lista para los registros de las unidades de obra civil 
-->
         
        <record model="ir.ui.view" id="view_ept_cp_unidades_obra_civil_tree">
            <field name="name">ept_cp_unidades_obra_civil_tree</field>
            <field name="model">ept_cp.unidades_obra_civil</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Unidades Obra Civil">
                    <field name="unidad"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="ept_cp_unidades_obra_civil_action">
            <field name="name">Unidades de Medida Obra Civil</field>
            <field name="res_model">ept_cp.unidades_obra_civil</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Aqui se registran las unidades de medidas para las obras civiles
                </p>
            </field>
        </record>
        
        <menuitem name="Unidades Obra Civil" 
            id="inicio_ept_cp_unidades_obra_civil"  
            action="ept_cp_unidades_obra_civil_action" 
            parent="menu_ept_cp_tipo_sectores"
            sequence="30"/>
     
    </data>
</openerp>
