<!--
         vista formulario para la carga de los montos minimos de especies en semovientes
-->
         
        <record model="ir.ui.view" id="view_ept_cp_semovientes_form">
            <field name="name">ept_cp_semovientes_form</field>
            <field name="model">ept_cp.semovientes</field> 
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Semovientes">
                    <sheet>
                        <group col="2" colspan="2">
                            <field name="especie" style="width: 40%%"/>
                            <field name="monto_minimo" style="width: 40%%"/>
                        </group>
                     </sheet>
                </form>
            </field>
         </record>
         
<!--
         vista lista para los registros de montos minimos de especies en semovientes
-->
         
