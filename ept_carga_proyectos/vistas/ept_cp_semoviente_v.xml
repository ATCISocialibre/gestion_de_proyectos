            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Semovientes">
                    <field name="especie"/>
                    <field name="monto_minimo"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="ept_cp_semovientes_action">
            <field name="name">Semovientes</field>
            <field name="res_model">ept_cp.semovientes</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Aqui se registran las especies de semovientes
                </p>
            </field>
        </record>
        
