<?xml version="1.0" encoding="utf-8"?>
<openerp>
     <data>
         
<!--
         vista formulario para la carga de los montos minimos de maquinaria
-->
         
        <record model="ir.ui.view" id="view_ept_cp_montos_minimos_maquinaria_form">
            <field name="name">ept_cp_montos_minimos_maquinaria_form</field>
            <field name="model">ept_cp.montos_minimos_maquinaria</field> 
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Montos Minimos Maquinaria">
                    <sheet>
                        <group col="2" colspan="2">
                            <field name="uso" style="width: 40%%"/>
                            <field name="monto_minimo" style="width: 40%%"/>
                        </group>
                     </sheet>
                </form>
            </field>
         </record>
         
<!--
         vista lista para los registros de montos minimos de maquinaria
-->
         
        <record model="ir.ui.view" id="view_ept_cp_montos_minimos_maquinaria_tree">
            <field name="name">ept_cp_montos_minimos_maquinaria_tree</field>
            <field name="model">ept_cp.montos_minimos_maquinaria</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Montos Minimos Maquinaria">
                    <field name="uso"/>
                    <field name="monto_minimo"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="ept_cp_montos_minimos_maquinaria_action">
            <field name="name">Montos Minimos Obra Civil</field>
            <field name="res_model">ept_cp.montos_minimos_maquinaria</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Aqui se registran los montos minimos para las maquinarias
                </p>
            </field>
        </record>
        
        <menuitem name="Monto Minimo Maquinaria" 
                id="inicio_ept_cp_montos_minimos_maquinaria"  
                action="ept_cp_montos_minimos_maquinaria_action" 
                parent="menu_ept_cp_tipo_sectores"
                sequence="40"/>
         
    </data>
</openerp>
